- cache ["v1", "sidebar"] do
  .hud ng-hide="catalogOpened()"
    a#save-button ng-click="cart.state == 'saved' || cart.save()" ng-class="{saved: cart.state == 'saved'}" ng-if="cart.context.editable"
      span.carticon-floppy
      span ng-bind="cart.state == 'saved' ? 'Sauvegardé' : 'Sauvegarder'"
    == render "geocms/templates/sidebar/header"
    tabset.row-fluid#hud-tab
      tab heading=t("layers") uncheckable=""
        == render "geocms/templates/sidebar/tab_cart"
      tab heading=t("context.infos") uncheckable=""
        == render "geocms/templates/sidebar/tab_infos"
      tab heading="Légende" uncheckable=""
        == render "geocms/templates/sidebar/tab_legend"
    == render "geocms/templates/sidebar/footer"